<% if current_user.likes_post?(post) %>
  <%= form_with url: destroy_like_path(post), method: :delete, class: 'inline' do |form| %>
    <%= form.hidden_field :post_id, value: post.id %>
    <%= form.submit 'Unlike' %>
  <% end %>
<% else %>
  <%= form_with url: like_path(post), class: 'inline' do |form| %>
    <%= form.hidden_field :post_id, value: post.id %>
    <%= form.submit 'Like' %>
  <% end %>
<% end %>

