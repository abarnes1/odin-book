<% if likeable.liked_by?(current_user) %>
  <%= form_with url: [likeable, :likes], method: :delete, class: 'inline' do |form| %>
    <%= form.hidden_field :likeable_id, value: likeable.id %>
    <%= form.submit 'Unlike' %>
  <% end %>
<% else %>
  <%= form_with url: [likeable, Like.new], class: 'inline' do |form| %>
    <%= form.hidden_field :likeable_id, value: likeable.id %>
    <%= form.submit 'Like' %>
  <% end %>
<% end %>