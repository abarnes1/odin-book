<%# replace link that loads additional comments %>
<% if @commentable.not_displayed_comments? %>
  <%= turbo_stream.replace @commentable.load_comments_link_id do %>
    <%= link_to @commentable.load_comments_link_text, load_path(**@commentable.load_comments_params), 
      id: @commentable.load_comments_link_id, method: :get, data: { turbo_stream: true } %> 
  <% end %>
<% else %>
  <%= turbo_stream.remove @commentable.load_comments_link_id %>
<% end %>

<%# render additional comments %>
<%= turbo_stream.prepend(@commentable.comments_container_id) do %>
  <%= render partial: 'comments/comment', collection: @commentable.display_comments %>
<% end %>