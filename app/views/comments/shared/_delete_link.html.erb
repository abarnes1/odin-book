  <% if comment.user == current_user %>
    <% if comment.soft_deleted? %>
      <%= link_to 'Undelete', comment_path(comment, comment: { soft_deleted: false }, display: { depth: comment.display_depth }), 
        method: :put, data: { turbo_stream: true, turbo_method: :patch } %>  
    <% else %>
      <%= link_to 'Delete', comment_path(comment, comment: { soft_deleted: true }, display: { depth: comment.display_depth }),
        method: :put, data: { turbo_stream: true, turbo_method: :patch } %>  
    <% end %>         
  <% end %>