<%= turbo_stream.update 'flash', partial: 'shared/flash' unless flash.empty? %>

<%= turbo_stream.update(@comment.container_id(:message)) do %>
  <% render partial: 'comments/shared/message', locals: { comment: @comment }%>
<% end %>

<%= turbo_stream.update(@comment.container_id(:delete_link)) do %>
  <% render partial: 'comments/shared/delete_link', locals: { comment: @comment }%>
<% end %>

<%= turbo_stream.update(@comment.container_id(:interactions)) do %>
  <%= render partial: 'comments/thread_comment/interactions', locals: { comment: @comment } %>
<% end %>
