<div class="post-container border-light border-curved is-flex is-flex-direction-column mx-auto p-2 mb-3">
  <%= render partial: "posts/stackable_components/post_header", locals: { post: post } %>

  <%= turbo_frame_tag post.container_id(:content) do %>
    <%= render partial: "posts/stackable_components/content", locals: { post: post } %>
  <% end %>

  <%= turbo_frame_tag post.container_id(:delete_link) do %>  
    <%= render partial: "posts/stackable_components/delete_link", locals: { post: post } %>
  <% end%>

  <%= render partial: "posts/stackable_components/interaction_counters", locals: { post: post } %>

  <hr class="my-0 has-background-grey">

  <%= turbo_frame_tag  post.container_id(:interaction_links) do %>
    <%= render partial: "posts/stackable_components/interaction_links", locals: { post: post } %>
  <% end %>

  <hr class="my-0 has-background-grey">

  <%= render partial: "posts/stackable_components/comment_thread_links", locals: { post: post } %>

  <%= turbo_frame_tag post.container_id(:comment_form) %>

  <%= turbo_frame_tag post.container_id(:comments) do %>
      <% post.display_comments.each do |comment| %>
        <%= render partial: 'comments/thread/comment', locals: { comment: comment, avatar_size: comment.avatar_size } %>  
      <% end %>
  <% end %>
</div>